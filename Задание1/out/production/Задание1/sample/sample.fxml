<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="center" prefHeight="241.0" prefWidth="266.0" style="-fx-background-color: silver;" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <children>
      <ImageView fx:id="Img" fitHeight="191.0" fitWidth="198.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../Img/1.png" />
         </image></ImageView>


      <HBox prefHeight="47.0" prefWidth="153.0">
         <children>
            <Button mnemonicParsing="false" onAction="#back" text="Назад">
               <HBox.margin>
                  <Insets left="5.0" top="9.0" />
               </HBox.margin>
            </Button>
            <Button mnemonicParsing="false" onAction="#Start" text="Запуск">
               <HBox.margin>
                  <Insets left="10.0" top="10.0" />
               </HBox.margin>
            </Button>
            <Button mnemonicParsing="false" onAction="#Stop" text="Остановка">
               <HBox.margin>
                  <Insets left="5.0" top="10.0" />
               </HBox.margin>
            </Button>
            <Button mnemonicParsing="false" onAction="#next" text="Далее">
               <HBox.margin>
                  <Insets left="10.0" top="9.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </children>
</VBox>
